<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GENERAL_VIEW_BG_COLOR"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/phone_order_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_fragment_header_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/header_tel_text"
                android:textColor="@color/MAIN_FRAGMENT_HEADER_TEXT_COLOR"
                android:textSize="17sp"
                android:drawablePadding="3dp"
                android:layout_marginLeft="@dimen/main_header_padding_left" />

            <EditText
                android:id="@+id/header_tel_edit_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:requiresFadingEdge="none" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/general_boundary_line"
            android:contentDescription="@string/img_desc" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_fragment_header_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_date_text"
                android:textColor="@color/MAIN_FRAGMENT_HEADER_TEXT_COLOR"
                android:textSize="17sp"
                android:drawablePadding="3dp"
                android:layout_marginLeft="@dimen/main_header_padding_left" />

            <TextView
                android:id="@+id/header_date_edit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/general_boundary_line"
            android:contentDescription="@string/img_desc" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_fragment_header_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_addr_text"
                android:textColor="@color/MAIN_FRAGMENT_HEADER_TEXT_COLOR"
                android:textSize="17sp"
                android:drawablePadding="3dp"
                android:layout_marginLeft="@dimen/main_header_padding_left" />

            <EditText
                android:id="@+id/header_addr_edit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/general_boundary_line"
            android:contentDescription="@string/img_desc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_collocate"
            android:textColor="@color/PHONE_ORDER_COLLOCATE_TEXT_COLOR"
            android:textSize="22sp"
            android:layout_marginLeft="@dimen/main_header_padding_left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:drawablePadding="5dp"
			android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/general_dotted_line"
            android:contentDescription="@string/img_desc" />

        <ListView
            android:id="@+id/phone_order_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/general_dotted_line"
            android:fadingEdge="none"
            android:cacheColorHint="#00000000"
            />
    </LinearLayout>

</LinearLayout>