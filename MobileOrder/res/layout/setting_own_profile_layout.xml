<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GENERAL_VIEW_BG_COLOR"
    android:orientation="vertical" >

    <com.eteng.mobileorder.cusomview.TopNavigationBar
        android:id="@+id/general_navi_view"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 店名 -->

            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                 >

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/setting_own_profile_name_text"
                    android:textColor="@color/GENERAL_TEXT_COLOR"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/setting_own_profile_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/GENERAL_TEXT_COLOR" />
            </LinearLayout>

            <!-- 电话 -->

            <LinearLayout
                android:id="@+id/layout_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_name"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shop_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/setting_own_profile_tel_text"
                    android:textColor="@color/GENERAL_TEXT_COLOR"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/setting_own_profile_tel_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/GENERAL_TEXT_COLOR" />
            </LinearLayout>

            <!-- 简介 -->

            <LinearLayout
                android:id="@+id/layout_dish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_tel"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:gravity="top" >
                
                <TextView
                    android:id="@+id/shop_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/setting_own_profile_dish_text"
                    android:textColor="@color/GENERAL_TEXT_COLOR"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/setting_own_profile_dish_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:maxLines="8"
                    android:scrollbars="vertical"
                    android:textColor="@color/GENERAL_TEXT_COLOR" />
            </LinearLayout>

            <!-- 范围 -->

            <LinearLayout
                android:id="@+id/layout_scope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_dish"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/scope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/setting_own_profile_scope_text"
                    android:textColor="@color/GENERAL_TEXT_COLOR"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/setting_own_profile_scope_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/GENERAL_TEXT_COLOR" />
            </LinearLayout>

            <!-- 地址 -->

            <LinearLayout
                android:id="@+id/layout_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_scope"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/setting_own_profile_addr_text"
                    android:textColor="@color/GENERAL_TEXT_COLOR"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/setting_own_profile_addr_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/GENERAL_TEXT_COLOR" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/setting_own_profile_save_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/general_corner_small_frame_selector"
            android:text="@string/save_text"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>